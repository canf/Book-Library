<div class="section is-light">
   <div class="columns">
      <div class="column3 is-4">
         <h1>
         <%= image_tag @book.image.url %>
      </div>
      <div class="column3">
         <h1 class="title is-1"><%= @book.title %></h1>
         <h2 class="title is=3"><%= @book.author %></h2>
         <div class="content">
            <%= @book.description %>
         </div>
         <!-- Tags -->   
         <div id="tag_cloud">
            <% @book.tags.each do |tag| %>
            <%= link_to tag.name, tag_path(tag.name), class: "button is-dark"%>
            <% end %>
         </div>
         <% if admin? %>
         <%= link_to 'Edit', edit_book_path(@book), class: "button is-dark is-small" %> 
         <% end %>
      </div>
   </div>


    
      
</div>
<!-- Comments -->
<div class="section">
   <center>
      <h3>Comments (<%= @book.coms.size %>)</h3>
   </center>
   <%= render partial: 'books/com', collection: @book.coms.reverse %>
</div>

   <% if user_signed_in? %>
   <%= render partial: 'coms/form' %>
   <hr />
   <% else %>
   <h1>Only users can comment<br><br></h1>
   <% end %>
