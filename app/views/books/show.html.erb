<div class="section">
  <div class="columns">
    <div class="column is-4">
      <h1>
    <%= image_tag @book.image.url %>
  </div>
    <div class="column">
      <h1 class="title is-2"><%= @book.title %></h1> by <h2 class="title is=3"><%= @book.author %></h2>

        <div class="content">
          <p><strong>Description:</strong></p>
          <%= @book.description %>
        </div>

      <% if admin? %>
        <%= link_to 'Edit', edit_book_path(@book) %> |
      <% end %>
      </div>
    </div>

</div>
