<div class="section">
  <div class="container has-text-centered">
    <h1 class="title">
      <i class="fa fa-book"></i> Books available
    </h1>
    <hr>
  </div>
  <div class="book-grid">
    <%= render @books %>
    <% if @book %>
    <%= link_to (image_tag @book.image.url(:thumb)), book_path(@book) %>
    <% end %>
  </div>
</div>
