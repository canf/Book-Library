
<section class="hero">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <i class="fa fa-book"></i> Books available
      </h1>
      <h2 class="subtitle">
        Choose your favorite
      </h2>
    </div>
  </div>
</section>

<div class="row">
<div class="column">

<div class="section">
  <div class="book-grid">
    <%= render @books %>
    <% if @book %>
    <%= link_to (image_tag @book.image.url(:thumb)), book_path(@book) %>
    <% end %>
  </div>
</div>
